@model CreateCourseModel

@{ 
    ViewData["Title"] = "CreateCourse"; 
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Create A New Course</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Create Course</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12"l>
                    <!-- Horizontal Form -->
                    <div class="card card-info">
                        <div class="card-header">
                            <h3 class="card-title">Create A New Course</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form class="form-horizontal" method="post" asp-controller="Home"
                              asp-action="CreateCourse" asp-antiforgery="true">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="card-body">
                                <table style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>Title</th>
                                            <th>Fees</th>
                                        </tr>
                                    </thead>
                                </table>
                                @{
                                    for (int i = 0; i < 5; i++)
                                    {
                                        <div class="form-group row">
                                            @*<label asp-for="@Model.CourseList[i].Title" class="col-sm-1 col-form-label">Title:</label>*@
                                            <div class="col-sm-6">
                                                <input  type="text" class="form-control" asp-for="CourseList[(i)].Title" id="CourseListTitle@(i)"
                                                        placeholder="Course title" >
                                            </div>
                                           @* <label asp-for="@Model.CourseList[i].Fees" class="col-sm-1 col-form-label">Fees:</label>*@
                                            <div class="col-sm-6">
                                                <input type="number" class="form-control" asp-for="CourseList[(i)].Fees" id="CourseListFees@(i)"
                                                        placeholder="Fees" >
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">
                                <button type="submit" class="btn btn-info">Create</button>
                                <a asp-action="CreateCourse" asp-controller="Home"
                                   class="btn btn-default float-right">Cancel</a>
                            </div>
                            <!-- /.card-footer -->
                        </form>
                    </div>
                    <!-- /.card -->
                </div>
                <!--/.col (left) -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>